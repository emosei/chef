{
  "name": "web",
  "chef_type": "role",
  "json_class": "Chef::Role",

  "default_attributes": {
    "nginx": {
      "env": ["ruby"]
    },
    "ruby-env": {
      "version": "2.4.0",
      "rbenv_url":      "https://github.com/rbenv/rbenv",
      "ruby-build_url": "https://github.com/rbenv/ruby-build"
    },
    "nginx-conf": {
      "vhost": "kyouka"
    }
  },
  "run_list": [
    "recipe[yum-epel]",
    "recipe[nginx]",
    "recipe[nginx-conf::unicorn]",
    "recipe[nodejs]",
    "recipe[ruby-env]",
    "recipe[imagemagick]"
  ]
}
